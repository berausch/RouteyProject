@model IEnumerable<Routey.Models.Location>

<script>
    $(document).ready(function () {
        $("#modal1").dialog({
            resizable: true,
            height: 600,
            width: 500,
            modal: true,
            close: function ()
            { 
                $(this).dialog("destroy");
            }
        });
        $('#modal1').dialog('open');
    $("#addThisLocation").submit(function (event) {
            event.preventDefault();
            $.ajax({
                type: 'GET',
                dataType: 'html',
                data: $(this).serialize(),
                url: '@Url.Action("AddLocation")',
                success: function (result) {
                    $('#modal1').dialog('destroy');
                    $("#log").hide();
                    $("#route").show();
                $('#route').append(result);
                }
            });
        });
    });
</script>
<hr />
<div id="modal1">

        @foreach (var yPlace in Model)
        {

            <p>@Html.DisplayFor(modelItem => yPlace.Name)</p>
            <p>@Html.DisplayFor(modelItem => yPlace.Location.Address1)</p>
            <p>@Html.DisplayFor(modelItem => yPlace.Location.City), @Html.DisplayFor(modelItem => yPlace.Location.State) @Html.DisplayFor(modelItem => yPlace.Location.Zip_code)</p>

            <form id="addThisLocation">
                <input type="hidden" name="id" value="@yPlace.Id" />
                <button type="submit">Add Me!</button>
            </form>

        }
 </div>

